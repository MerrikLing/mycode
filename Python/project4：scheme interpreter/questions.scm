(define (merge inorder? list1 list2)
  ; BEGIN PROBLEM 16
  (define (help f lst1 lst2 now)
    (cond ((and (null? lst1) (not (null? lst2))) (append now lst2))
          ((and (null? lst2) (not (null? lst1))) (append now lst1))
          ((null? lst1) now)
          (else (if (f (car lst1) (car lst2)) 
                       (help f (cdr lst1) (cdr lst2) (append now (list (car lst1) (car lst2))))
